@model KidChores2.Models.CreateRoomViewModel
@{
    ViewBag.Title = "Room";
}

<div class="jumbotron">
    <h1>Rooms</h1>
</div>

<div>
    <h4>
        <span style="text-align-last:right">
            <br />
            @Html.ActionLink("Click to add a Room", "/Room/CreateRoom")
        </span>
    </h4>
</div>

<table class="table table-striped table-hover">
    <tr>
        <th>
            <b>Room Name</b>
        </th>
        <th>
            <b>Details | Edit | Delete</b>
        </th>
    @*</tr>*@

    @foreach (var item in Model.Rooms)
    {
        <tr>
            <td>@item.RoomName</td>
            <td>
                <button class="btn btn-default btn-xs" onclick="location.href='@Url.Action("DetailRoom", "Room", new { id = item.Id })'">Details</button>
                | <button class="btn btn-default btn-xs edit" onclick="location.href='@Url.Action("EditRoom", "Room", new { id = item.Id })'">Edit</button>
                | @*<button class="btn btn-default btn-xs edit-room" onclick="$('#myModal').modal()">Edit</button>*@
                | <button class="btn btn-danger btn-xs" onclick="location.href='@Url.Action("DeleteRoom", "Room", new { id = item.Id })'">Delete</button>
            </td>
        </tr>
    }
</table>







